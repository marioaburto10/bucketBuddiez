<!-- This is the page that the user can use to add cities to their bucket list -->
<!-- Page Title -->
<nav>
    <div class="nav-wrapper click-to-toggle">
        <a href="#" class="brand-logo">City Teleporter</a>
        <ul id="nav-mobile" class="right ">
            <li><a href="/view/countries/{{this.id}}">Add Countries</a></li>
            <li><a href="/view/states/{{this.id}}">Add States</a></li>
            <li><a href="/view/bucketlist/{{this.id}}">View Profile</a></li>
        </ul>
    </div>
</nav>
<!-- Dynamically Render Country Tiles -->
<main id="tilesContent">
    {{#each cities}}
    <div class="tile card white">
        <div class="card-content black-text">
            <div>{{this.cityName}}</div>
            <div class="imgDiv" style="background-image: url('{{this.cityImageURL}}')"></div>
            <div class="plusMinusIcon" data-locationtype="city" data-locationid="{{this.id}}"><a class="btn btn-floating waves-effect waves-light teal darken-1"><i class="material-icons">add</i></a>
            </div>
        </div>
    </div>
    {{/each}}
</main>
<!-- Link in jQuery -->
<script type="text/javascript" src="/assets/javascript/jquery-3.1.1.min.js"></script>
<!-- Add Location to Bucketlist -->
<script type="text/javascript" src="/assets/javascript/add-countries-states-cities.js"></script>
