</nav>


<!-- Dynamically Render Country Tiles -->

<main id="tilesContent">
  {{#each countries}}
    <div class="tile card blue-grey darken-1">
      <div class="card-content white-text">
       
       <div>{{this.countryName}}</div>
                                                                <!-- Image API LINK HERE -->
        <div class="imgDiv" ></div> <!-- style="background-image: url('http://image-api/{{this.countryName}}/')" -->
          <div class="plusMinusIcon" value="{{this.id}}"><a class="btn btn-floating waves-effect waves-light"><i class="material-icons" value="{{this.id}}">add</i></a>
        </div>


      </div>
    </div>
  {{/each}}
</main>

<script src='http://code.jquery.com/jquery-2.1.3.min.js'></script>
